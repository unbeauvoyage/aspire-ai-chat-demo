{
  "openapi": "3.0.1",
  "info": {
    "title": "MyApi | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/weatherforecast": {
      "get": {
        "tags": [
          "WeatherHandlers"
        ],
        "summary": "Get weather forecast",
        "description": "Get weather forecast data for the next 5 days.",
        "operationId": "GetWeatherForecast",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecastDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/weatherforecast/generate": {
      "get": {
        "tags": [
          "WeatherHandlers"
        ],
        "summary": "Generate a plausible multi-day forecast using Semantic Kernel",
        "operationId": "GenerateWeatherForecast",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/weatherforecast/analyze": {
      "post": {
        "tags": [
          "MyApi"
        ],
        "operationId": "AnalyzeWeather",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/WeatherForecastDto"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/weatheranalysis/latest": {
      "get": {
        "tags": [
          "MyApi"
        ],
        "summary": "Get latest weather analysis",
        "operationId": "GetLatestWeatherAnalysis",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WeatherAnalysisDto"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/weatherforecast/study": {
      "post": {
        "tags": [
          "WeatherHandlers"
        ],
        "summary": "Interactive weather study using Semantic Kernel",
        "operationId": "WeatherStudy",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WeatherStudyRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WeatherAnalysisDto": {
        "required": [
          "id",
          "createdAt",
          "analysis"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "analysis": {
            "type": "string"
          }
        }
      },
      "WeatherForecastDto": {
        "required": [
          "date",
          "temperatureC",
          "temperatureF"
        ],
        "type": "object",
        "properties": {
          "date": {
            "type": "string"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32"
          },
          "summary": {
            "type": "string",
            "default": null,
            "nullable": true
          },
          "icon": {
            "type": "string",
            "default": null,
            "nullable": true
          }
        }
      },
      "WeatherStudyRequest": {
        "required": [
          "forecasts"
        ],
        "type": "object",
        "properties": {
          "forecasts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WeatherForecastDto"
            }
          },
          "userPrompt": {
            "type": "string",
            "default": null,
            "nullable": true
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "WeatherHandlers"
    },
    {
      "name": "MyApi"
    }
  ]
}