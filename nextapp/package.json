{
  "name": "nextapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p --race dev:next watch:api",
    "dev:next": "next dev",
    "watch:api": "nodemon",
    "build": "next build",
    "start": "next dev",
    "start:prod": "next start --turbopack",
    "lint": "next lint",
    "generate-api": "curl -k https://localhost:7012/openapi/v1.json -o /tmp/openapi.json && npx @openapitools/openapi-generator-cli generate -i /tmp/openapi.json -g typescript-fetch -o ./src/data/apiClient/openapi --additional-properties=useSingleRequestParameter=true",
    "generate-api-from-file": "npx @openapitools/openapi-generator-cli generate -i ../MyApi/openapi/v1.json -g typescript-fetch -o ./src/data/apiClient/openapi --additional-properties=useSingleRequestParameter=true",
    "dotnet-build": "dotnet build ../MyApi/MyApi.csproj",
    "regen-dtos": "npm-run-all -s dotnet-build generate-api-from-file"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.85.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query-devtools": "^5.85.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "nodemonConfig": {
    "watch": [
      "../MyApi/openapi"
    ],
    "ext": "json",
    "exec": "npm run generate-api-from-file"
  }
}
